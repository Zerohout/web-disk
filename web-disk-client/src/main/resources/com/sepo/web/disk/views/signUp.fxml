<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.sepo.web.disk.client.controllers.SignUpController"
      stylesheets="@../styles/mainStyles.css"
      spacing="10" alignment="CENTER" prefWidth="300" prefHeight="400">

    <VBox spacing="10">
        <Label text="E-mail"
               styleClass="field-description-label"/>
        <TextField fx:id="sighUpEmailTField"/>

        <Label text="Repeat e-mail"
               styleClass="field-description-label"/>
        <TextField fx:id="signUpRepEmailTField"/>

        <Label text="Password"
               styleClass="field-description-label"/>
        <HBox alignment="CENTER" spacing="5">
            <PasswordField fx:id="signUpPassPField" HBox.hgrow="ALWAYS"/>
            <Button text="show" styleClass="show-pass-button" onAction="#showSignUpPFieldAction"/>
        </HBox>

        <Label text="Repeat password"
               styleClass="field-description-label"/>
        <HBox alignment="CENTER" spacing="5">
            <PasswordField fx:id="signUpRepPassPField" HBox.hgrow="ALWAYS"/>
            <Button text="show" styleClass="show-pass-button" onAction="#showSignUpRepPassPFieldAction"/>
        </HBox>

        <Label fx:id="errorLbl" styleClass="error-label" visible="false"/>
        <Label fx:id="successLbl" styleClass="success-label" visible="false"/>

        <Button text="Sign up"
                onAction="#signUpAction" maxWidth="Infinity"/>
        <Button text="Back" onAction="#backAction" maxWidth="Infinity"/>
    </VBox>
    <padding>
        <Insets left="20" right="20" top="20" bottom="20"/>
    </padding>
</VBox>
